<!DOCTYPE html>
<html>

<head>
  <%- include('./partials/head.ejs') %>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.1/chart.min.js"></script>
</head>

<body>
  <div id="cover"></div>
  <%- include('./partials/navbar.ejs') %>

  <div class="container-fluid mt-5">
    <div class="row text-center">
      <div class="col">
        <div class="row">
          <p class="fs-1 fw-bold"><%= usersDataObj['group_name'] %> </p>
          <p class="fs-6"><%= usersDataObj['group_description'] %> </p>
        </div>
        <div class="row">
          <div class="col">
            <div class="row mb-2">
              <h6 class="mb-0 text-muted">Lists Created</h6> <span class="fs-2 fw-bolder"><%= groupTasks.length %> </span>
            </div>
            <div class="row mb-2">
              <h6 class="mb-0"></h6> <span></span>
            </div>
          </div>
          <div class="col">
            <div class="row mb-2">
              <h6 class="mb-0 text-muted">Completion</h6> <span class="fs-2 fw-bolder">% </span>
            </div>
            <div class="row mb-2">
              <h6 class="mb-0"></h6> <span></span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="mx-2 my-5">
      <table class="table table-danger table-hover ">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">User</th>
            <th scope="col">List Name</th>
            <th scope="col">Completed?</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0; i < groupTasks.length; i += 1) { %>
          <tr>
            <th scope="row"><a href="/complete/list/<%= groupTasks[i]['id'] %>"><%= i + 1 %></a></th>
            <td><a href="/profile/view/<%= groupTasks[i]['user_id'] %> "><%= groupTasks[i]['user_name'] %></a></td>
            <td><%= groupTasks[i]['list_name'] %> </td>

            <% if(groupTasks[i]['completion_status'] == true) { %>
            <td>✔</td>
            <% } else { %>
            <td>❌</td>
            <% } %>
            <% i + 1 %>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>

  </div>

  <!-- Optional JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>


</body>

</html>