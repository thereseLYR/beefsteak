<!DOCTYPE html>
<html>

<head>
  <%- include('./partials/head.ejs') %>
</head>

<body>
  <div id="cover"></div>
  <%- include('./partials/navbar.ejs') %>

  <div class="d-flex justify-content-center">
    <form action="/register" method="POST">
      <h1>Register a New Account</h1>

      <div class="my-1">
        <label for="user_name"><b>User Name</b></label>
        <input type="text" placeholder="amazing-duck" name="user_name" required />
      </div>

      <div class="my-1">
        <label for="first_name"><b>First Name</b></label>
        <input type="text" placeholder="John" name="first_name" required />
      </div>

      <div class="my-1">
        <label for="last_name"><b>Last Name</b></label>
        <input type="text" placeholder="Tan" name="last_name" required />
      </div>

      <div class="my-1">
        <label for="email"><b>Email</b></label>
        <input type="email" placeholder="ducky@quackquack.com" name="email" required />
      </div>

      <div class="my-1">
        <label for="password"><b>Password</b></label>
        <input type="password" placeholder="Enter Password" name="password" required />
      </div>

      <button type="submit" class="btn btn-danger">Sign Up</button>
    </form>
  </div>

  <div class="d-grid gap-2 my-5 mx-5">
    <a class="btn btn-secondary d-grid gap-2" href="/login" role="button">Log In</a>
    <a class="btn btn-secondary d-grid gap-2" href="/logout" role="button">Log Out</a>
  </div>

  <!-- Optional JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>

</html>