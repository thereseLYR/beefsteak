<!DOCTYPE html>
<html>

<head>
  <%- include('./partials/head.ejs') %>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.1/chart.min.js"></script>
</head>

<body>
  <div id="cover"></div>
  <%- include('./partials/navbar.ejs') %>

  <div class="container-fluid mt-5">
    <div class="row text-center mx-5">
      <div class="col-md-6">
        <div class="row">
          <p class="fs-1 fw-bold">@<%= userData['user_name'] %></p>
          <p class="fs-6"><%= userData['first_name'] %> <%= userData['last_name'] %> </p>
        </div>
        <div class="row">
          <div class="col">
            <div class="row mb-2">
              <h6 class="mb-0 text-muted">Lists Created</h6> <span class="fs-2 fw-bolder"><%= userStats['numOfCreatedLists'] %> </span>
            </div>
            <div class="row mb-2">
              <h6 class="mb-0"></h6> <span></span>
            </div>
          </div>
          <div class="col">
            <div class="row mb-2">
              <h6 class="mb-0 text-muted">Completion</h6> <span class="fs-2 fw-bolder"><%= userStats['percentageListCompletion'] %>% </span>
            </div>
            <div class="row mb-2">
              <h6 class="mb-0"></h6> <span></span>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="container">
          <canvas id="myChart"></canvas>
        </div>
      </div>
    </div>
  </div>

  <div class="mx-5 my-5">
    <table class="table table-danger table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">List Name</th>
          <th scope="col">Description</th>
          <th scope="col">Completed?</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i = 0; i < userTasks.length; i += 1) { %>
        <tr>
          <th scope="row"><a href="/complete/list/<%= userTasks[i]['id'] %>"><%= i + 1 %> </a> </th>
          <td><%= userTasks[i]['list_name'] %> </td>
          <td><%= userTasks[i]['list_description'] %> </td>
          <% if(userTasks[i]['completion_status'] == true) { %>
          <td>✔</td>
          <% } else { %>
          <td>❌</td>
          <% } %>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <!-- Optional JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  <!-- this is a dummy placeholder chart -->
  <script>
    const ctx = document.getElementById('myChart');
    const myChart = new Chart(ctx, {
      type: 'bar',
      data: {
        labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
        datasets: [{
          label: '# of Votes',
          data: [12, 19, 3, 5, 2, 3],
          backgroundColor: [
            'rgba(255, 99, 132, 0.2)',
            'rgba(54, 162, 235, 0.2)',
            'rgba(255, 206, 86, 0.2)',
            'rgba(75, 192, 192, 0.2)',
            'rgba(153, 102, 255, 0.2)',
            'rgba(255, 159, 64, 0.2)'
          ],
          borderColor: [
            'rgba(255, 99, 132, 1)',
            'rgba(54, 162, 235, 1)',
            'rgba(255, 206, 86, 1)',
            'rgba(75, 192, 192, 1)',
            'rgba(153, 102, 255, 1)',
            'rgba(255, 159, 64, 1)'
          ],
          borderWidth: 1
        }]
      },
      options: {
        scales: {
          y: {
            beginAtZero: true
          }
        }
      }
    });
  </script>
</body>

</html>